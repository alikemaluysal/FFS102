@model Student

<h1>Öğrenci Ekle</h1>

<h4>Öğrenci</h4>

<div class="row">
    <div class="col">
        <form method="post" asp-action="Create">
            <div class="form-group">
                <label class="control-label" asp-for="FirstName"></label>
                <input class="form-control" type="text" asp-for="FirstName" />
            </div>

            <div class="form-group">
                <label class="control-label" asp-for="LastName"></label>
                <input class="form-control" type="text" asp-for="LastName" />
            </div>

            <div class="form-group">
                <label class="control-label" asp-for="FieldId"></label>
                <select class="form-control" asp-items="@ViewBag.Fields" asp-for="FieldId">
                    <option value="0" selected disabled>Alan Seçiniz</option>
                </select>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Ekle" class="btn btn-outline-success"/>
            </div>
        </form>
    </div>
</div>